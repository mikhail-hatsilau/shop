doctype html
html(lang="en", ng-app="shopApp")
  head
    meta(charset="UTF-8")
    title Shop
    //build:css static/styles/styles.css
    link(rel="stylesheet", href="styles/plugins.css")
    link(rel="stylesheet", href="styles/styles.css")
    //endbuild
  body
    .page-wrapper(ng-controller="MainController")
      .header
        .navbar.navbar-default
          .container
            .navbar-header
              button.navbar-toggle.collapsed(
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1"
                aria-expanded="false"
              )
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="#") Shop
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav
                li(ng-if="user")
                  a(href="#", ui-sref="main.orders").
                    #[span.glyphicon.glyphicon-shopping-cart]
                    My orders
              .navbar-text.navbar-right(ng-if="user").
                Welcome:
                #[span(ng-bind="user.username")]
                #[a.logout(href="" ng-click="logout()") Logout]
      .content
        .container(ui-view)
    .footer
      .container All rights reserved
    //build:js static/scripts/scripts.js
    script(src="scripts/plugins.js")
    script(src="scripts/coffeeScripts.js")
    script(src="scripts/modules/app.module.js")
    script(src="scripts/services/api.service.js")
    script(src="scripts/services/login.service.js")
    script(src="scripts/controllers/products.controller.js")
    script(src="scripts/controllers/productDetails.controller.js")
    script(src="scripts/controllers/orders.controller.js")
    script(src="scripts/controllers/newProduct.controller.js")
    script(src="scripts/controllers/login.controller.js")
    script(src="scripts/controllers/main.controller.js")
    script(src="scripts/app.js")
    //endbuild


